{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "formatter": {
      "lineWidth": 100,
      "quoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": ["apps/playground", "packages/releases/formatter.js"]
  },
  "linter": {
    "rules": {
      "style": {
        "useSelfClosingElements": "off",
        "useBlockStatements": "off",
        "noUselessElse": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noConsoleLog": "off",
        "noAssignInExpressions": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    }
  }
}
